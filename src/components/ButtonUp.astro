---
import ArrowUp from "@/icons/arrowUp.astro";
---

<button
    id="btn-up"
    class="fixed z-50 right-5 bottom-5 rounded-full px-4 py-2 shadow-lg cursor-pointer flex items-center gap-2 text-white font-bold text-xl hover:bg-pink-700 transition hidden"
>
    <ArrowUp />
</button>

<script>
    document.addEventListener("astro:page-load", () => {
        const btnUp = document.getElementById("btn-up");
        window.onscroll = () => {
            const scrollY = window.scrollY;
            const showArrowMax = 1000;
            if (scrollY > showArrowMax) {
                btnUp?.classList.remove("hidden");
                btnUp?.classList.add("block");
            } else {
                btnUp?.classList.add("hidden");
            }
        };

        btnUp?.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    });
</script>
